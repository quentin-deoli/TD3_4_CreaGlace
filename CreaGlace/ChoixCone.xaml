<Window x:Class="CreaGlace.ChoixCone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choix du Cône"
        Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Image Source="ChoixCone.png" Stretch="Fill"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Choisis ton cône" FontSize="42" FontWeight="Bold" Foreground="#FF553125" HorizontalAlignment="Center" Margin="0 0 0 20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 20">

                <Button x:Name="BtnCone1" Width="140" Height="200" Margin="10" Background="Transparent" BorderBrush="Transparent" Click="Cone_Click" Tag="1">
                    <Border x:Name="Border1" BorderThickness="0" CornerRadius="10">
                        <Image Source="Images/cone1.png" Stretch="Uniform"/>
                    </Border>
                </Button>

                <Button x:Name="BtnCone2" Width="140" Height="200" Margin="10" Background="Transparent" BorderBrush="Transparent" Click="Cone_Click" Tag="2">
                    <Border x:Name="Border2" BorderThickness="0" CornerRadius="10">
                        <Image Source="Images/cone2.png" Stretch="Uniform"/>
                    </Border>
                </Button>

                <Button x:Name="BtnCone3" Width="140" Height="200" Margin="10" Background="Transparent" BorderBrush="Transparent" Click="Cone_Click" Tag="3">
                    <Border x:Name="Border3" BorderThickness="0" CornerRadius="10">
                        <Image Source="Images/cone3.png" Stretch="Uniform"/>
                    </Border>
                </Button>

                <Button x:Name="BtnCone4" Width="140" Height="200" Margin="10"  Background="Transparent" BorderBrush="Transparent" Click="Cone_Click" Tag="4">
                    <Border x:Name="Border4" BorderThickness="0" CornerRadius="10">
                        <Image Source="Images/cone4.png" Stretch="Uniform"/>
                    </Border>
                </Button>

            </StackPanel>

            <Button x:Name="BtnValider" Content="Valider" FontSize="24" Width="200" Height="60" Background="#AAFFFFFF" BorderBrush="White" BorderThickness="3" Click="Valider_Click"/>

        </StackPanel>
    </Grid>
</Window>