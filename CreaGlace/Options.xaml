<Window x:Class="CreaGlace.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options" Height="450" Width="800" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">

    <Grid>
        <Image Source="Glace.jpg" Stretch="Fill"/>

        <Border Width="400" Height="350" 
                Background="#DDFFFFFF" 
                CornerRadius="20" 
                BorderBrush="#00CFFF" BorderThickness="2"
                HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel Margin="20" VerticalAlignment="Center">

                <TextBlock Text="PARAMÈTRES" 
                           FontSize="28" FontWeight="Bold" 
                           Foreground="#00CFFF" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                <TextBlock Text="Volume Musique" FontWeight="Bold" Margin="10,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Slider x:Name="SliderMusique" 
                            Minimum="0" Maximum="100" 
                            Width="280" 
                            ValueChanged="SliderMusique_ValueChanged"/>
                    <TextBlock x:Name="txtMusiqueValeur" Text="50%" 
                               Width="50" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="Volume Effets Sonores" FontWeight="Bold" Margin="10,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Slider x:Name="SliderSFX" 
                            Minimum="0" Maximum="100" 
                            Width="280" 
                            ValueChanged="SliderSFX_ValueChanged"/>
                    <TextBlock x:Name="txtSFXValeur" Text="100%" 
                               Width="50" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="BoutonRetour" 
                        Content="Retour au Menu" 
                        Width="150" Height="40"
                        Background="#00CFFF" Foreground="White" FontWeight="Bold"
                        FontSize="16"
                        Margin="0,40,0,0"
                        Click="BoutonRetour_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>