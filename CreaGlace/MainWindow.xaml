<Window x:Class="CreaGlace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crea'Glace - Menu"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF7EEDB">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/fondmenu.png"/>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Crea'Glace" FontSize="50" FontWeight="Bold" Foreground="#FFDA637B" HorizontalAlignment="Center" Margin="0 0 0 30"/>

            <Button Content="Jouer" Width="220" Height="55" FontSize="22"  Margin="0 0 0 15" Click="Jouer_Click" Background="#FFECD4AE"/>

            <Button Content="Options" Width="220" Height="55" FontSize="22" Margin="0 0 0 15" Click="Options_Click" Background="#FFE4A258"/>

            <Button Content="Quitter" Width="220" Height="55" FontSize="22" Click="Quitter_Click" Background="#FFF7E8CE"/>
        </StackPanel>
    </Grid>
</Window>