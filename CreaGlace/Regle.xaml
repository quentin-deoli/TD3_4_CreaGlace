<Window x:Class="CreaGlace.Regle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Règles du jeu"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <!-- Image de fond -->
        <Grid.Background>
            <ImageBrush ImageSource="/regless.png"/>
        </Grid.Background>

        <!-- Image du cône choisi -->
        <Image x:Name="imgCone"
               Width="180"
               Height="180"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               Margin="0 0 0 30"/>
    </Grid>
</Window>