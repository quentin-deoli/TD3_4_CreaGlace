<Window x:Class="CreaGlace.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game" Height="450" Width="800">

    <!-- Fond du jeu -->
    <Window.Background>
        <ImageBrush ImageSource="imgFondJeu.png"/>
    </Window.Background>

    <Canvas x:Name="canvasJeu">
        <!-- Score en haut à gauche -->
        <TextBlock x:Name="txtScore"
                   Text="Score: 0"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   Canvas.Left="10"
                   Canvas.Top="10"/>

        <!-- Cône choisi -->
        <Image x:Name="imgConeChoisi" Width="100" Height="100"/>
    </Canvas>
</Window>
