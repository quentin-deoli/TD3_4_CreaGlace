<Window x:Class="CreaGlace.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jeu Crea'Glace"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/imgFondJeu.png"/>
        </Grid.Background>

        <Canvas x:Name="canvasJeu">

            <TextBlock x:Name="txtScore" Text="Score: 0" FontSize="24" FontWeight="Bold" Foreground="White" Canvas.Left="10" Canvas.Top="10"/>

            <TextBlock x:Name="txtTemps" Text="Temps: 00:00" FontSize="24" FontWeight="Bold" Foreground="White" Canvas.Right="10" Canvas.Top="10"/>

            <TextBlock x:Name="txtPause" Text="PAUSE" FontSize="60" FontWeight="Bold" Foreground="#FFDA637B" Visibility="Collapsed" Canvas.Left="300" Canvas.Top="150"/>

            <Image x:Name="imgConeChoisi" Width="80" Height="80"/>
        </Canvas>
    </Grid>
</Window>