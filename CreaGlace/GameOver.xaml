<Window x:Class="CreaGlace.GameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Partie Terminée" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF7EEDB">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/gameover.png" Opacity="0.5"/>
        </Grid.Background>

        <Border Width="400" Height="300"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Background="#E6FFFFFF"
                CornerRadius="20"
                BorderBrush="#FF69B4" BorderThickness="3" Margin="0,124,0,0">

            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.4"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock Text="RÉSULTATS"
                           Foreground="#FF69B4"
                           FontSize="32"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Score Glacé : " FontSize="22" Foreground="#333"/>
                    <TextBlock x:Name="txtScore" Text="0" FontSize="24" FontWeight="Bold" Foreground="#FF1493"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock Text="Temps de jeu : " FontSize="20" Foreground="#333"/>
                    <TextBlock x:Name="txtTime" Text="00:00" FontSize="22" FontWeight="Bold" Foreground="#00BFFF"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Rejouer"
                            Width="130" Height="45"
                            Background="#00C9A7" Foreground="White"
                            FontWeight="Bold" FontSize="18"
                            Margin="10"
                            Click="ButtonReplay_Click"/>

                    <Button Content="Quitter"
                            Width="130" Height="45"
                            Background="#FF6B6B" Foreground="White"
                            FontWeight="Bold" FontSize="18"
                            Margin="10"
                            Click="ButtonQuit_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>