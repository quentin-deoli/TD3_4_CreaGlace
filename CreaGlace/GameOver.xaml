<Window x:Class="CreaGlace.GameOver" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Partie Terminée" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Image Source="/gameover.png"/>

        <Border Width="400" Background="#DDFFFFFF" CornerRadius="20" BorderBrush="Black" VerticalAlignment="Center" HorizontalAlignment="Center">

            <StackPanel Margin="20">

                <TextBlock Text="GAME OVER" FontSize="40" FontWeight="Bold" Foreground="Red" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Score final : " FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtScore" Text="0" FontSize="22" FontWeight="Bold" Foreground="Blue"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock Text="Temps de jeu : " FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtTime" Text="00:00" FontSize="22" FontWeight="Bold" Foreground="Blue"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="REJOUER" Width="120" Height="40" Background="LightGreen" FontWeight="Bold" Margin="10" Click="ButtonReplay_Click"/>
                    <Button Content="QUITTER" Width="120" Height="40" Background="IndianRed" FontWeight="Bold" Margin="10" Click="ButtonQuit_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>