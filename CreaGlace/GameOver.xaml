<Window x:Class="CreaGlace.GameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreaGlace"
        mc:Ignorable="d"
        Title="GameOver" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/gameover.png"/>
        </Grid.Background>

        <Border Height="234" 
                Width="392"
                VerticalAlignment="Top" 
                HorizontalAlignment="Center"
                Background="#E6FFFFFF" 
                CornerRadius="20"
                BorderBrush="#FF69B4" BorderThickness="3"
                Margin="0,195,0,0">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock Text="RÉSULTATS" 
                           Foreground="#FF69B4" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                    <TextBlock Text="Score Glacé : " FontSize="20" Foreground="#333"/>
                    <TextBlock x:Name="txtScore" Text="0" FontSize="24" FontWeight="Bold" Foreground="#FF1493"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="Temps de jeu : " FontSize="18" Foreground="#333"/>
                    <TextBlock x:Name="txtTime" Text="00:00" FontSize="20" FontWeight="Bold" Foreground="#00BFFF"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">

                    <Button Content="Rejouer 🍦" 
                            Width="120" Height="40" 
                            Background="#00C9A7" Foreground="White"
                            FontWeight="Bold" FontSize="16"
                            Margin="10"
                            Click="ButtonReplay_Click"/>

                    <Button Content="Quitter ❌" 
                            Width="120" Height="40" 
                            Background="#FF6B6B" Foreground="White"
                            FontWeight="Bold" FontSize="16"
                            Margin="10"
                            Click="ButtonQuit_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>