<Window x:Class="CreaGlace.Gagne"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Victoire !" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Image Source="/imgFondJeu.png" Stretch="UniformToFill"/>

        <Rectangle Fill="Black" Opacity="0.5"/>

        <Border Width="500" CornerRadius="50" BorderThickness="5" VerticalAlignment="Center" HorizontalAlignment="Center">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="Gold" Offset="0"/>
                    <GradientStop Color="OrangeRed" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <SolidColorBrush Color="LightYellow" Opacity="0.9"/>
            </Border.Background>

            <Border.Effect>
                <DropShadowEffect Color="Gold" BlurRadius="30" ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel Margin="20">

                <TextBlock Text="VICTOIRE !" FontSize="50" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="Orange" Offset="0"/>
                            <GradientStop Color="Gold" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

                <TextBlock Text="SCORE DE 500 ATTEINT !" FontSize="18" FontStyle="Italic" Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">

                    <StackPanel Margin="20,0">
                        <TextBlock Text="SCORE" FontSize="14" FontWeight="Bold" Foreground="Orange"/>
                        <TextBlock x:Name="txtScore" Text="500" FontSize="30" FontWeight="Bold" Foreground="Black"/>
                    </StackPanel>

                    <StackPanel Margin="20,0">
                        <TextBlock Text="CHRONO" FontSize="14" FontWeight="Bold" Foreground="Orange"/>
                        <TextBlock x:Name="txtTime" Text="01:20" FontSize="30" FontWeight="Bold" Foreground="Black"/>
                    </StackPanel>

                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="REJOUER" Width="130" Height="40" Background="Gold" FontWeight="Bold" Margin="10" Click="BoutonMenu_Click"/>
                    <Button Content="QUITTER" Width="130" Height="40" Background="IndianRed" Foreground="White" FontWeight="Bold" Margin="10" Click="BoutonQuit_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>